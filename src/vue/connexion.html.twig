{% extends "base.html.twig" %}

{% block title %}
	{{ parent() }}
	Connexion
{% endblock %}

{% block contenu %}
	<form action="index.php?page=connexion" method="post" enctype="application/x-www-form-
			urlencoded">
		<h1>Se connecter</h1>
		{% if form.valide is defined %}
			{% if form.valide == false %}
			<div class="alert alert-danger" role="alert">
				{{form.message}}
			</div>
			{% endif %}
		{% endif %}
		<label for="inputEmail" class="sr-only">Email:</label>
		    <input type="email" id="inputEmail" name="inputEmail" class="form-control" placeholder="Email" required autofocus>
		<label for="inputPassword" class="sr-only">Mot de passe:</label>
		    <input type="password" id="inputPassword" name="inputPassword" class="form-control" placeholder="Mot de passe" required>
		</br>
		<button class="btn btn-lg btn-primary btn-block" type="submit" name="connexion">Se connecter</button>
    </form>

{% endblock %}
